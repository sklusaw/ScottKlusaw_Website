{
  "name": "scott-klusaw-website",
  "version": "3.0.0",
  "description": "Scott Klusaw Personal Portfolio Website - Static S3-hosted site",
  "private": true,
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\" --ignore \"archive/**,node_modules/**\"",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .prettierignore",
    "lint:js": "eslint \"**/*.js\" --ignore-path .prettierignore",
    "format": "prettier --write \"**/*.{html,css,js}\" --ignore-path .prettierignore",
    "validate": "npm-run-all lint:*",
    "fix": "npm run format && npm-run-all \"lint:* -- --fix\"",
    "test:paths": "broken-link-checker-local ./ --exclude archive --exclude node_modules --filter-level 3",
    "test:all": "npm-run-all validate test:paths",
    "serve": "live-server --port=8080 --entry-file=index.html --ignore=node_modules,archive",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.html": [
      "prettier --write",
      "htmlhint"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "broken-link-checker-local": "^0.2.0",
    "eslint": "^8.55.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sklusaw/ScottKlusaw_Website"
  },
  "keywords": [
    "portfolio",
    "personal-website",
    "static-site"
  ],
  "author": "Scott Klusaw",
  "license": "MIT"
}
